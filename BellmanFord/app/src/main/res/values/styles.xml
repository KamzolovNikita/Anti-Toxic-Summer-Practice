<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StartFragmentButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_start_screen_navigation_selection</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_fragment_start_button</item>
    </style>

    <style name="TextAppearance.Header" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.Default" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/btn_back</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="AlgorithmInfoButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/btn_algo_info</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="AlgorithmStepButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/btn_algo_step</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="AlgorithmStepBackButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_blue_background</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlgorithmStepNextButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_red_background</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlgorithmStepToEndButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_purple_background</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopUpAnimationFromBottom">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_show</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_exit</item>
    </style>

    <style name="PopUpAnimationFromLeft">
        <item name="android:windowEnterAnimation">@anim/popup_left_show</item>
        <item name="android:windowExitAnimation">@anim/popup_left_exit</item>
    </style>
</resources>